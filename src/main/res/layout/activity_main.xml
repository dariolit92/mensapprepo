<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleApp"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="MensApp"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/logoSapienza"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/universitaroma1" />

        <ImageView
            android:id="@+id/logoTorVergata"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"

            android:background="@drawable/uniroma2" />

        <ImageView
            android:id="@+id/logoRoma3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="60dp"

            android:background="@drawable/uniroma3" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/registrazione"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:background="@drawable/registrazione"
        />


    <ImageButton
        android:id="@+id/login"
        android:layout_width="219dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/login"/>
    <com.facebook.login.widget.LoginButton
        android:id="@+id/loginFacebook"
        android:layout_width="238dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
android:background="@drawable/facebook"
        android:layout_weight="0.15"
       />


</LinearLayout>